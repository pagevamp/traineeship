{%-  style  -%}
    .cards-container {
        display: grid;
        gap: 1rem;
        grid-template-columns: repeat(4, 1fr);
    }

    .cards-heading {
        text-align: left;
    }

    .card {
        padding: 1rem;
        border-radius: 40px;
        border: 1px solid black;

        display: flex;
        flex-direction: column;
        justify-content: space-between;
        align-items: center;
    }

    .card__title {
        font-size: 2rem;
    }
{% endstyle %}

<h1 class="cards-heading">{{ section.settings.heading }}</h1>
<div class="cards-container">
    {% for block in section.blocks %}
        {%- case block.type -%}
            {%- when "card" -%}
                <div class="card">
                    <img class="card__image" src="{{ block.settings.image |  image_url: width:100, height: 100 }}" alt="{{ block.settings.image }}" />
    
                    <h1 class="card__title">{{ block.settings.card_title }}</h1>
    
                    <p class="card__price">${{ block.settings.price }}</p>
                </div>
        {%- endcase -%}
    {% endfor %}
</div>

{% schema %}
{
    "name": "Cards",
    "tag": "section",
    "class": "card",
    "settings": [
        {
            "type": "text",
            "id": "heading",
            "label": "Heading"
        }
    ],
    "blocks": [
        {
            "type": "card",
            "name": "Card",
            "limit": 50,
            "settings": [
                {
                    "type": "text",
                    "id": "card_title",
                    "label": "Card Title"
                },
                {
                    "type": "image_picker",
                    "id": "image",
                    "label": "Card Image"
                },
                {
                    "type": "text",
                    "id": "price",
                    "label": "Card Price"
                }
            ]
        }
    ],
    "presets": [
        {
            "name": "Default Card Name"
        }
    ]
}
{% endschema %}
