        "type": "image_picker"
      }, {
        "id": "country",
        "label": "Country",
        "type": "text",
        "default": "USA"
      }, {
        "id": "disclaimer_items",
        "label": "Disclaimer Items",
        "type": "textarea"
      }
    ],
    "blocks": [
      {
        "type": "social_icon",
        "name": "Social Icon",
        "settings": [
          {
            "id": "icon_image",
            "type": "image_picker",
            "label": "Icon Image"
          }, {
            "id": "icon_link",
            "type": "url",
            "label": "Icon Link"
          }
        ]
      }, {
        "type": "footer_link",
        "name": "Footer Link",
        "settings": [
          {
            "id": "link_text",
            "type": "text",
            "label": "Link Text"
          }, {
            "id": "link_url",
            "type": "url",
            "label": "Link URL"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Default",
        "category": "Footer",
        "blocks": [
          {
            "type": "social_icon"
          }, {
            "type": "footer_link"
          }
        ]
      }
    ]
  }
{% endschema %}