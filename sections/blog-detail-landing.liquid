{% schema  %} 
{
    "name": "Blog Detail Landing",
    "settings": [{
        "id": "title",
        "label": "Title",
        "type": "text"
    },{
        "id":"project_name",
        "label": "Project Name",
        "type": "text"
    },{
        "id":"country",
        "label": "Country",
        "type": "text"
    },{
        "id":"design",
        "label": "Design",
        "type": "text"
    },{
        "id":"hero_image",
        "label": "Hero Image",
        "type": "image_picker"
    }],
    "blocks": [
        {
            "name": "Blog Image",
            "type": "blog_image",
            "settings": [
                {
                    "id": "blog_image",
                    "label": "Blog Image",
                    "type": "image_picker"
                },
                {
                    "id": "blog_image_width",
                    "label": "Blog Image Width",
                    "type": "select",
                    "options": [
                        { "value": "100%", "label": "Full Image" },
                        { "value": "50%", "label": "Half Image" }
                    ]
                }
            ]
        }
    ],
    "presets": [
        {
            "name": "Blog Detail Landing"
        }
    ]
}
{% endschema %}