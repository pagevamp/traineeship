{%- style -%}
    .fifty-fifty {
        width: 90%;
        padding: 1rem;
        margin-top: 10rem;
        background-color: #102116;

        .image-container {
            width: 119%;

            .content-image {
                width: 100%;
            }

            .content-image:nth-of-type(2) {
                display:none;
            }
        }

        .content {
            width: 100%;
            display: flex;
            flex-direction: column;
            gap: 1.1rem;

            .title {
                font-size: clamp(2.5rem, 10vw, 5.3rem);
                line-height: 100%;
                color: #fff;
                text-transform: uppercase;
            }

            .subtitle {
                font-size: 1.5rem;
                line-height: 1.75rem;
                color: #fff;
            }

            .btn-shop {
                width: 110%;
                background-color: #FFF;
                text-decoration: none;
                color: #000;
                padding-block: 1rem;
                border-radius: 3.5rem;

                font-weight: 500;
                font-size: 1.6rem;
                line-height: 2rem;
                text-align: center;

                box-shadow: 4px 8px 12px 0px #00000040;
            }
        }
    }

    @media screen and (min-width: 768px) {
        .fifty-fifty {
            max-width: 90%;
            margin-inline: auto;
            height: 90vh;
            padding: 3rem 3.5rem;
            display: flex;
            margin-bottom: 10rem;
            justify-content: space-between;
            gap: 4rem;

            .image-container {
                width: 50%;
                position: relative;

                .content-image {
                    width: 100%;
                    position: absolute;
                }

                .content-image:nth-of-type(1) {
                    height: 115%;
                }
                .content-image:nth-of-type(2) {
                    display: block;
                    width: 40%;
                    aspect-ratio: 1 / 1;
                    bottom: -18%;
                    left: -1rem;
                }
            }

            .content {
                width: 50%;
                margin-right: 1rem;
                padding-block: 2rem;
                display: flex;
                flex-direction: column;
                justify-content: space-between;

                .btn-shop {
                    width: max-content;
                    padding-inline: 5rem;
                }
            }
        }
    }
{% endstyle %}

{% for block in section.blocks %}
    {%- case block.type -%}
        {%- when "fifty-fifty_content" -%}
            {%  assign toggle = block.settings.checkbox %}
            <div id="image-control" class="image-container">
                <img class="content-image" src="
                    {% if toggle %}
                        {{ block.settings.image_1 |  image_url }}
                    {% else %}
                        {{ block.settings.image_2 |  image_url }}
                    {% endif %}
                " alt="{{ block.settings.image }}">

                <img class="content-image" src="
                {% if toggle %}
                    {{ block.settings.image_2 |  image_url }}
                {% else %}
                    {{ block.settings.image_1 |  image_url }}
                {% endif %}
                " alt="{{ block.settings.image }}">
            </div>

            <div class="content">
                <h1 class="title">
                    {% if block.settings.title == ""  %}
                        Title
                    {% else %}
                        {{ block.settings.title }}
                    {% endif %}
                </h1>
                <p class="subtitle">
                    {% if block.settings.paragraph == ""  %}
                        Insert the Paragraph
                    {% else %}
                        {{ block.settings.paragraph }}
                    {% endif %}
                </p>
                <a href="{{ block.settings.button_link}}" target="_blank" class="btn-shop">
                    {% if block.settings.button_label == ""  %}
                        Button Label
                    {% else %}
                        {{ block.settings.button_label }}
                    {% endif %}
                </a>
            </div>
    {%- endcase -%}
{% endfor %}


{% schema %}
{
    "name": "50-50",
    "tag": "section",
    "class": "fifty-fifty",
    "settings": [
        {
            "type": "text",
            "id": "heading",
            "label": "Heading"
        }
    ],
    "blocks": [
        {
            "type": "fifty-fifty_content",
            "name": "50-50 Content",
            "settings": [
                {
                    "type": "text",
                    "id": "title",
                    "label": "Title"
                },
                {
                    "type": "text",
                    "id": "paragraph",
                    "label": "Paragraph"
                },
                {
                    "type": "image_picker",
                    "id": "image_1",
                    "label": "Image 1"
                },
                {
                    "type": "image_picker",
                    "id": "image_2",
                    "label": "Image 2"
                },
                {
                    "type": "text",
                    "id": "button_label",
                    "label": "Button Label"
                },
                {
                    "type": "url",
                    "id": "button_link",
                    "label": "Button Link"
                },
                {
                    "type": "checkbox",
                    "id": "checkbox",
                    "label": "Toggle Image"
                }
            ]
        }
    ],
    "presets": [
        {
            "name": "Fifty-Fifty"
        }
    ]
}
{% endschema %}