{%  style  %} 
    .fifty-section{
        background: #FFEDDD;
        padding-bottom: 80px;
        margin: 0;
        /* position: relative; */
        height: 100%;
        width: 100%;
    }
    .card__image{
        width: 100%;
        position: relative;

        .image__card:nth-of-type(1){ 
            width: 126%;
            position: relative;
            top: 30%;
            left: 10%;
            padding-top: 10%;
        }
        .image__card:nth-of-type(2){
            display: none;
        }
    }
    .fifty-cards{
        width: 75%;
        height: 100%;
        background-color: #102116;
        border-radius: 30px;
    }
    .card__desc{
        color: white;
        margin-top: auto;
        position: relative;
        top: 50%;
        left: 10%;
        padding-right: 10%;
        /* max-width: 80%; */
        display: flex;
        justify-content: space-around;
        flex-direction: column;
        padding-bottom: 30px;
        /* bottom: 50%; */
        .title{
            font-size: 2.5rem;
            font-family: 'Helvetica Neue';
        }
        .cta_link{
            /* position: relative; */
            width: 120%;
            box-shadow: 4px 8px 12px 0px #00000040;
            background-color: white;
            color: black;
            border-radius: 40px;
            border: none;
            margin-top: 30px;
            text-decoration: none;
            padding: 1rem 3rem;
            font-size: 2rem;
            text-align: center;
        }
        .cta_link:hover{
        border: 1px solid white;
        color: white;
        background-color: black;
    }
    }
    


    @media screen and (min-width: 768px){
        .fifty-cards{
            width: 90%;
            height: 100%;
            margin: auto;
        }
        .card__image{
            display: flex;
            width: 50%;
            height: 600px;
            position: relative;
            .image__card:nth-of-type(1){ 
                position: absolute;
                width: 100%;
                height: 110%;
                top: -2%;
                left: 10%;
                padding-top: 10%;
                object-fit: contain
                /* border-radius: 30px; */
                
            }
            .image__card:nth-of-type(2){
                display: block !important;
                position: absolute;
                width: 50%;
                height: 50%;
                left: 5%;
                bottom: -12%;
               
            }
            
        }
        
        .card__items{
           display: flex;
           height: 100%;
        }
        .card__desc{
            margin-top: 20px;
            width: 40%;
            .title{
                font-size: 5.2rem;
                width: 9ch;
                /* line-height: 1; */
            }
            .cta_link{
                /* position: relative; */
                width: max-content;
            }
        }
        

    }
        
    
{% endstyle %}

<div class="fifty-section">
    <div class="fifty-cards">
        {% for block in section.blocks %}
            {% assign check = block.settings.checkbox %}
            <div class="card__items">
                <label class="card__image" id="toggle" aria-label="Card Image">
                    {% if check %}
                        {% if block.settings.images %}
                            <img class="image__card" src="{{ block.settings.images | image_url }}" alt="Primary Image">
                        {% endif %}
                        {% if block.settings.subimage %}
                            <img class="image__card" src="{{ block.settings.subimage | image_url }}" alt="Secondary Image">
                        {% endif %}
                    {% else %}
                        {% if block.settings.subimage %}
                            <img class="image__card" src="{{ block.settings.subimage | image_url }}" alt="Primary Image">
                        {% endif %}
                        {% if block.settings.images %}
                            <img class="image__card" src="{{ block.settings.images | image_url }}" alt="Secondary Image">
                        {% endif %}
                    {% endif %}
                </label>

                {% if block.settings.title or block.settings.paragraph or block.settings.linktext %}
                    <div class="card__desc" aria-label="Card Description">
                        {% if block.settings.title %}
                            <h3 class="title">{{ block.settings.title }}</h3>
                        {% endif %}
                        {% if block.settings.paragraph %}
                            <p class="paragraph">{{ block.settings.paragraph }}</p>
                        {% endif %}
                        {% if block.settings.link and block.settings.linktext %}
                            <a href="{{ block.settings.link }}" class="cta_link" aria-label="Link to {{ block.settings.linktext }}">{{ block.settings.linktext }}</a>
                        {% endif %}
                    </div>
                {% endif %}
            </div>
        {% endfor %}
    </div>
</div>




{% schema %}
    {
        "name": "Fifty-Fifty Section",
        "settings": [
            {
                "type": "checkbox",
                "id": "checkbox",
                "label": "Toggle Image"
            }
        ],
        "blocks": [
            {
                "type": "card",
                "name": "Card",
                
                "settings": [
                    {
                        "type": "checkbox",
                        "id": "checkbox",
                        "label": "Toggle Image"
                    },
                    {
                        "type": "text",
                        "id": "title",
                        "label": "Title"
                    },
                    {
                        "type": "text",
                        "id": "paragraph",
                        "label": "Paragraph"
                    },
                    {
                        "type": "url",
                        "id": "link",
                        "label": "Button link"
                    },
                    {
                        "type": "text",
                        "id": "linktext",
                        "label": "Button text",
                        "default": "Shop Now"
                    },
                    {
                        "type": "image_picker",
                        "id": "images",
                        "label": "Image"
                    },
                    {
                        "type": "image_picker",
                        "id": "subimage",
                        "label": "Sub-Image"
                    }
                ]
            }
        ],
        "presets": [ 
            {
                "name": "Fifty-Fifty Section",
                "category": "Custom"
            }
        ]
    }
{% endschema %} 