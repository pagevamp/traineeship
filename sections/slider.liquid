{%- style -%}
    .slider {
        width: 100vw;
        background-color: #A07636;
        padding: 2.5rem 1rem;
        .swiper-container {
            width: 100%;
            height: 100%;

            .header {

                .heading {
                    color: #102116;
                    font-weight: 700;
                    font-size: 1.5rem;
                    line-height: 1.5rem;
                }
            }

            .swiper-slide {
                
                .image-container {
                    width: 100%;
                    height: 336px;
                    background-color: #fff;

                    .slider-image {
                        width: 100%;
                        height: 100%;
                        object-fit: cover;
                    }
                }

                .content {
                    width: 100%;
                    padding: 1.5rem;
                    display: flex;
                    justify-content: space-between;
                    flex-wrap: wrap;
                    gap: 11px;
                    border-top: 2px solid transparent; 
                    background-color: #fff;

                    .tag, .price {
                        font-weight: 400;
                        font-size: 0.875rem;
                        line-height: 1.1375rem;
                    }

                    .tag {
                        color: #000000A6;
                    }

                    .price {
                        color: #000;
                    }

                    .item-name {
                        flex-basis: 100%;
                        text-align: center;
                        color: #000;
                        font-weight: 500;
                        font-size: 1.25rem;
                        line-height: 1.625rem;
                    }
                }
            }

            .swiper-button-next,
            .swiper-button-prev {
                z-index: 10;
            }
        }
    }

    @media screen and (min-width: 768px) {
        .slider {
            width: 100%;

            .swiper-container {
                width: 100%;
                height: 100%;

                .header {

                    .heading {
                        color: #fff;
                    }
                }
            }
        }
    }
{% endstyle %}

<div class="swiper-container 
{% if section.blocks.size >= 4 %}
    swiper
{% endif %}
">
    <div class="header">
        <p class="heading">{{ section.settings.heading }}</p>
    </div>
    <div class="swiper-wrapper">

        {% for block in section.blocks %}
        {%- case block.type -%}
        {%- when "slider_content" -%}
        <div class="swiper-slide">
            <div class="image-container">
                {% if block.settings.image %}
                <img class="slider-image" src="{{ block.settings.image |  image_url }}"
                    alt="{{ block.settings.image }}">
                {% endif %}
            </div>

            <div class="content">
                <p class="tag">
                    {% if block.settings.tag == "" %}
                        New Arrival
                    {% else %}
                        {{ block.settings.tag }}
                    {% endif %}
                </p>
                <p class="price">
                    {% if block.settings.price == "" %}
                    $00.00
                    {% else %}
                    {{ block.settings.price | money }}
                    {% endif %}
                </p>
                <p class="item-name">
                    {{ block.settings.name }}
                </p>
            </div>
        </div>
        {%- endcase -%}
        {% endfor %}
    </div>
    <div class="swiper-button-prev"></div>
    <div class="swiper-button-next"></div>
</div>

<script defer>
    document.addEventListener('DOMContentLoaded', function () {
        const swiper = new Swiper('.swiper', {
            loop: true,
            slidesPerView: 1,
            spaceBetween: 30,
            navigation: {
                nextEl: '.swiper-button-next',
                prevEl: '.swiper-button-prev',
            },
            breakpoints: {
                425: {
                    slidesPerView: 2,
                },
                768: {
                    slidesPerView: 3,
                },
                1024: {
                    slidesPerView: 4,
                },
            }
        });
    });
</script>


{% schema %}
{
    "name": "Slider",
    "tag": "section",
    "class": "slider",
    "settings": [
        {
            "type": "text",
            "id": "heading",
            "label": "Heading"
        }
    ],
    "blocks": [
        {
            "type": "slider_content",
            "name": "Slider Content",
            "settings": [
                {
                    "type": "text",
                    "id": "name",
                    "label": "Name"
                },
                {
                    "type": "text",
                    "id": "tag",
                    "label": "Tag"
                },
                {
                    "type": "number",
                    "id": "price",
                    "label": "Price"
                },
                {
                    "type": "image_picker",
                    "id": "image",
                    "label": "Image"
                },
                {
                    "type": "url",
                    "id": "item_link",
                    "label": "Item Link"
                }
            ]
        }
    ],
    "presets": [
        {
            "name": "Slider"
        }
    ]
}
{% endschema %}